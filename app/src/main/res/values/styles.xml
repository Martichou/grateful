<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/red</item>
        <item name="bgBottom_color">@color/white</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="BaseAppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/red</item>
        <item name="bgBottom_color">@color/white</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/red</item>
        <item name="bgBottom_color">@color/white</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorControlNormal">@color/black</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottomsheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BottomSheetEntryDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/beige</item>
    </style>

    <style name="HomeRvItemText">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
