<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="clickListener"
            type="me.martichou.be.grateful.adapters.NotesAdapter.OnNoteItemClickListener" />

        <variable
            name="note"
            type="me.martichou.be.grateful.data.NotesMinimal" />
    </data>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:minHeight="100dp"
        android:onClick="@{v -> clickListener.onNoteItemClick(v, note)}"
        app:cardCornerRadius="4dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/show_image_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_of_your_dedicated_note"
            android:maxHeight="150dp"
            android:scaleType="centerCrop"
            android:transitionName="@{note.id}"
            app:imageFromFile="@{note.image}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@{note.title}"
                android:textAppearance="@style/TextAppearanceH6"
                android:textColor="@color/white"
                android:textSize="@dimen/note_title"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearanceH6"
                android:textColor="@color/white"
                android:textSize="@dimen/note_timestamp"
                app:dateToHours="@{note.date}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{note.location}"
                android:textAppearance="@style/TextAppearanceH6"
                android:textColor="@color/white"
                android:textSize="@dimen/note_timestamp"
                app:isGone="@{note.location}" />

        </LinearLayout>

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

</layout>