<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="hdl"
            type="me.martichou.be.grateful.fragments.MainFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.PopupOverlay"
                app:layout_scrollFlags="scroll|snap">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginEnd="23dp"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="28sp"
                        android:textAppearance="@style/TextAppearanceSubtitle2"
                        android:textColor="@color/dark"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/main_profile" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/toolbar_slogan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/positivity_everyday"
                        android:textSize="20sp"
                        android:fontFamily="@font/nunitolight"
                        android:textColor="@color/grey_light"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/toolbar_title" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/main_profile"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/profile"
                        android:scaleType="centerCrop" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/linear_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:clipToPadding="false"
                android:orientation="vertical">

                <androidx.appcompat.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:background="@drawable/border"
                    android:elevation="3dp"
                    app:queryHint="Search for a gratitude note" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/what_made_me_smiled_today"
                    android:textColor="@color/bright_grey"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/main_landing"
                    android:layout_width="match_parent"
                    android:layout_height="255dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_rounded"
                    android:scaleType="centerCrop"
                    android:onClick="@{hdl::btnNewAction}"
                    android:foreground="@drawable/ripple_circle"
                    android:src="@drawable/landing_made" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/quartz"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gratitude"
                        android:textColor="@color/bright_grey"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textSize="15sp"
                        android:layout_toStartOf="@id/viewallnotes"
                        android:layout_alignParentStart="true" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/viewallnotes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all"
                        android:drawableEnd="@drawable/ic_keyboard_arrow"
                        android:textColor="@color/bright_grey"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:foreground="@drawable/ripple_circle"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/notes_list"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginEnd="-20dp"
                    android:nestedScrollingEnabled="false"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/quartz"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/places"
                    android:textColor="@color/bright_grey"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/main_mapview"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_rounded"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mapingg" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
