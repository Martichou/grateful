<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="main_category"
        app:title="@string/general">

        <SwitchPreferenceCompat
            app:key="themedark"
            app:title="@string/enable_dark_theme" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="notification_category"
        app:title="@string/notification">

        <SwitchPreferenceCompat
            app:key="dailynotification"
            app:title="@string/daily_reminder"/>

        <Preference
            app:key="defineTime"
            app:title="@string/when_do_you_want_to"
            app:dependency="dailynotification"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="help_category"
        app:title="@string/help">

        <Preference
            app:key="feedback"
            app:summary="@string/report_technical"
            app:title="@string/send_feedback" />

        <Preference
            app:key="about"
            app:summary="@string/discover"
            app:title="@string/privacy_policy" />

        <Preference
            app:key="version"
            app:summary="1.2.3"
            app:title="@string/app_version" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>