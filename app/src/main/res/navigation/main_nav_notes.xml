<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			xmlns:tools="http://schemas.android.com/tools"
			app:startDestination="@+id/main_fragment">

	<fragment
		android:id="@+id/main_fragment"
		android:name="me.martichou.be.grateful.fragments.HomeMainFragment"
		android:label="Grateful"
	>

		<action
			android:id="@+id/action_note_list_fragment_to_note_detail_fragment"
			app:destination="@id/show_fragment"/>

		<action
			android:id="@+id/action_main_fragment_to_test_activity"
			app:destination="@id/test_activity" app:enterAnim="@anim/activity_slide_up"
			app:exitAnim="@anim/zoom_out"
		/>

	</fragment>

	<fragment
		android:id="@+id/show_fragment"
		android:name="me.martichou.be.grateful.fragments.ShowMainFragment"
		android:label=" "
		tools:layout="@layout/fragment_showmain">

		<argument
			android:name="noteId"
			app:argType="long"/>

	</fragment>

	<activity
		android:id="@+id/test_activity"
		android:name="me.martichou.be.grateful.activities.TestActivity"
		android:label=" ">

		<argument
			android:name="noteId"
			app:argType="long"/>

	</activity>

</navigation>
